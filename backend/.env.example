# Runtime
ENVIRONMENT=development
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO

# Network Security
ALLOWED_ORIGINS=http://localhost:5000
TRUSTED_HOSTS=localhost,127.0.0.1

# Rate Limits
RATE_LIMIT_WINDOW_SECONDS=60
SPEECH_RATE_LIMIT=40
WEBHOOK_RATE_LIMIT=120
MAX_TEXT_CHARS=2500
MAX_AUDIO_BYTES=8388608

# LLM Routing
LLM_PROVIDER=openai
LLM_PROVIDER_CHAIN=openai,gemini,local

# OpenAI-compatible (can point to Groq/OpenAI)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o-mini

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL_NAME=gemini-2.5-flash
GEMINI_FALLBACK_MODELS=gemini-2.5-flash-lite,gemini-2.0-flash,gemini-2.0-flash-lite
GEMINI_MAX_RETRIES=2
GEMINI_RETRY_BASE_SECONDS=1.5

# Local OpenAI-compatible endpoint (Ollama/vLLM)
LOCAL_API_KEY=ollama
LOCAL_BASE_URL=http://localhost:11434/v1
LOCAL_MODEL_NAME=qwen3:4b

# Facebook
FB_VERIFY_TOKEN=
FB_PAGE_ACCESS_TOKEN=
FB_APP_SECRET=

# Admin
ADMIN_TOKEN=

# Knowledge Base
PDF_QUICK_USE_FOLDER=
